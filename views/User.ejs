                                </path></svg> Your Posts  </p>
    
                            </div>
                            <div class="Programming" id="programming">
                            <p class="vlog-heading">------------------------------------------</p>
                            <div class="row">
                                
                                <%  Posts.forEach(function(post){ %>
                                    <%  const StoredUsername = post.username;  %>
                                    <%  const UserName == '<%=username%>' %>
                                    <%  if (Username === StoredUsername ){ %>
                                            <div class="pricing-column col-lg-4 col-md-6">
                                                <div class="card" style="width: 14rem;">
                                                <img class="card-img-top" src="<%=post.IMGurl%>" alt="Card image cap">
                                                <div class="card-body">
                                                <h5 class="card-title"><%= post.title%></h5>
                                                <p class="card-text"><%=post.content.slice(0,50) + "..." %></p>
                                                <a href="/TechBlogs/<%=username%>/<%=post.title%>" class="btn btn-primary">Read Post</a>
                                                </div>
                                                </div>
                                            </div>
                                    
                                    <%    }else{ %>

                                    <%    } %>
                                    

                              <% }) %>


                               
    
                                
                                
    
                                </div>
                            </div>
                        </section>
                      </div>

                    <div class="last">
                        <p>TechBlogs -All Rights Reserved</p>
                    </div>
                   </div>
                </div>
            </div>
        </div>
    </div>


   </body>